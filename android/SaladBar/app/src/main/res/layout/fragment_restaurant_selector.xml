<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.sb.saladbar.RestaurantSelector">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="wrap_content" android:layout_height="94dp"
        android:text="Choose your Restaurant"
        android:layout_gravity="center_horizontal|top"
        android:gravity="bottom"
        android:textColor="#000000"
        android:textSize="20dp"
        android:typeface="serif" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="164dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:nestedScrollingEnabled="false">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/Restaurant_Choice">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SweetGreens"
            android:id="@+id/resChooser"
            android:layout_gravity="left|center_horizontal"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SaladWorks"
            android:id="@+id/radioButton2"
            android:layout_gravity="left|center_horizontal"
            android:checked="false"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salads-R-Us"
            android:id="@+id/radioButton3"
            android:layout_gravity="left|center_horizontal"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1800-Salads"
            android:id="@+id/radioButton4"
            android:layout_gravity="left|center_horizontal"
            android:checked="false" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="164dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal|bottom" >

    </LinearLayout>

</FrameLayout>
