<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/view">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_number"
            android:id="@+id/textView_order_number"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_name"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView_order_name"
            android:layout_alignTop="@+id/textView_order_number"
            android:layout_toRightOf="@+id/textView_order_number"
            android:layout_toEndOf="@+id/textView_order_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_ingredients"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView_order_ingredients"
            android:layout_below="@+id/textView_order_name"
            android:layout_toRightOf="@+id/textView_order_number"
            android:layout_toEndOf="@+id/textView_order_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_price"
            android:id="@+id/textView_order_price"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
